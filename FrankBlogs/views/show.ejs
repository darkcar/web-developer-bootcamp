<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">
        <%=blog.title%>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%=blog.image%>" alt="" class="ui centered rounded image">
            <div class="content">  
                <i class="calendar alternate icon"></i><span><%=blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%-blog.body%></p>
            </div>
            <form method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <button class="ui grey basic button" id="delete-post">Delete</button>
            </form>
            <div class="ui small modal">
                <i class="close icon"></i>
                <div class="header">Warnning</div>
                <div class="content">
                    <p>Are you sure to delete this post?</p>
                </div> 
                <div class="actions">
                    <div class="ui black deny button">Approve</div>
                    <div class="ui positive right labeled icon button">Cancel</div>
                </div>
            </div>

        </div>
    </div>
</div>
<% include partials/footer %>