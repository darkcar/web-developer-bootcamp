<div class="container">
  <h2>Create new campground</h2>
  <form action="/campgrounds" method="post">
    <div class="form-group">
      <label for="email">Camp name:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter camp name" name="name">
    </div>
    <div class="form-group">
      <label for="pwd">Image Url:</label>
      <input type="text" class="form-control" id="pwd" placeholder="Enter image url" name="image">
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
  </form>
  <a href="/">Go back</a>
</div>
