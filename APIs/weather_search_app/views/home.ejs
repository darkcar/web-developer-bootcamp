<% include partials/header %>
<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container-fluid">
            <h1 class="display-4">Welcome to my weather app</h1>
            <p class="lead">This is a project that I am playing with Nodejs and ExpressJS framework.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Type in the city your want to query for the weather!</h2>
            <form action="/query" method="get">
                <div class="form-group">
                    <label for="cityInput">City:</label>
                    <input type="text" name="city" placeholder="Enter city" aria-describedby="weatherAPI" class="form-control">
                    <small id="weatherAPI" class="form-text text-muted">We'll use yahoo weather API.</small>
                </div>
                <button type="submit" class="btn btn-primary">Query</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>